{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CMake (Debug)",
            "type": "shell",
            "command": "cmake -B build -S . -DCMAKE_BUILD_TYPE=Debug",
            "group": "build"
        },
        {
            "label": "Compile (Debug)",
            "type": "shell",
            "command": "cmake --build build -j4",
            "dependsOn": "Build CMake (Debug)",
            "group": "build"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm -rf build",
            "group": "build"
        },
        {
            "label": "Run (Debug)",
            "type": "shell",
            "command": "./bin/bms",
            "dependsOn": "Compile (Debug)",
            "group": "test"
        },
    ]
}
