{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "x86 Build CMake (Debug)",
            "type": "shell",
            "command": "cmake -B build_x86 -S . -DCMAKE_BUILD_TYPE=Debug -G Ninja",
            "group": "build"
        },
        {
            "label": "x86 Compile (Debug)",
            "type": "shell",
            "command": "cmake --build build_x86",
            "dependsOn": "x86 Build CMake (Debug)",
            "group": "build"
        },
        {
            "label": "Run (Debug)",
            "type": "shell",
            "command": "./build/project_output/bms",
            "dependsOn": "Compile (Debug)",
            "group": "test"
        },
        {
            "label": "Unit Tests",
            "type": "shell",
            "command": "cd build && ctest --output-on-failure",
            "dependsOn": "Compile (Debug)",
            "group": "test"
        },
        {
            "label": "arm64 Build CMake (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build_arm64",
                "-S", ".",
                "-DCMAKE_BUILD_TYPE=Release",
                "-G", "Ninja",
                "-DCMAKE_SYSTEM_NAME=Linux",
                "-DCMAKE_SYSTEM_PROCESSOR=aarch64",
                "-DCMAKE_C_COMPILER=aarch64-linux-gnu-gcc",
                "-DCMAKE_CXX_COMPILER=aarch64-linux-gnu-g++",
                "-DOPENSSL_ROOT_DIR=/usr/lib/aarch64-linux-gnu",
                "-DOPENSSL_INCLUDE_DIR=/usr/include",
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "arm64 Compile (Release)",
            "type": "shell",
            "command": "cmake --build build_arm64",
            "dependsOn": "arm64 Build CMake (Release)",
            "group": "build"
        },
    ]
}
