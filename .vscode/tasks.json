{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake (Debug)",
            "type": "shell",
            "command": "cmake -B build -S . -DCMAKE_BUILD_TYPE=Debug",
            "group": "build"
        },
        {
            "label": "Build CMake",
            "type": "shell",
            "command": "cmake --build build",
            "dependsOn": "Configure CMake (Debug)",
            "group": "build"
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "./build/project_output/main",
            "dependsOn": "Build CMake",
            "group": "test"
        }
    ]
}
